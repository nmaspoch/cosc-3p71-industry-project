<View>
  <Header value="Road Safety Annotation"/>
  
  <!-- Display metadata -->
  <View style="background: #f0f0f0; padding: 10px; margin-bottom: 10px; border-radius: 5px;">
    <Text name="metadata_header" value="Image Metadata" style="font-weight: bold; margin-bottom: 5px;"/>
    <Text name="lat" value="Latitude: $latitude"/>
    <Text name="lon" value="Longitude: $longitude"/>
    <Text name="time" value="Timestamp: $timestamp"/>
    <Text name="dir" value="Direction: $direction"/>
  </View>
  
  <!-- Image display -->
  <Image name="image" value="$image" zoom="true" zoomControl="true"/>
  
  <!-- Road Condition Classification -->
  <View style="margin-top: 15px;">
    <Header value="Road Condition Classification"/>
    <Choices name="road_condition" toName="image" choice="single" required="true">
      <Choice value="safe"/>
      <Choice value="minor_issues"/>
      <Choice value="major_problems"/>
    </Choices>
  </View>
  
  <!-- Problem Type Detection with Bounding Boxes -->
  <View style="margin-top: 15px;">
    <Header value="Problem Type Detection (Draw boxes around issues)"/>
    <RectangleLabels name="problem_type" toName="image">
      <Label value="pothole" background="#FF0000"/>
      <Label value="crack" background="#FFA500"/>
      <Label value="flooding" background="#0000FF"/>
      <Label value="construction" background="#FFFF00"/>
      <Label value="debris" background="#800080"/>
      <Label value="damaged_sign" background="#FFC0CB"/>
    </RectangleLabels>
  </View>
  
  <!-- Additional notes -->
  <View style="margin-top: 15px;">
    <Header value="Additional Notes (Optional)"/>
    <TextArea name="notes" toName="image" placeholder="Any additional observations..." rows="3"/>
  </View>
</View>